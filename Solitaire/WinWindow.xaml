<Window x:Class="Solitaire.WinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Solitaire"
        mc:Ignorable="d"
        Title="Window1" Height="200" Width="200" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <StackPanel>
        <TextBlock Text="You Win!" TextAlignment="Center" FontSize="36" />
        <Button Content="Play Again" Height="40" Width="80" Margin="10" Click="PlayAgain_Click" />
        <Button Content="Exit" Height="40" Width="80" Margin="0" Click="Exit_Click" />
    </StackPanel>
</Window>
